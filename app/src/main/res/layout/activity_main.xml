<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_cal_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="30sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="6"
        android:useDefaultMargins="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_sin"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_gray_btn"
            android:onClick="onClick"
            android:text="SIN"
            android:textSize="24sp" />
        <Button
        android:id="@+id/btn_cos"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_columnWeight="1"
        android:background="@drawable/bg_circle_gray_btn"
        android:onClick="onClick"
        android:text="COS"
        android:textSize="24sp" />
        <Button
        android:id="@+id/btn_square_root"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_columnWeight="1"
        android:background="@drawable/bg_circle_gray_btn"
        android:onClick="onClick"
        android:text="√"
        android:textSize="24dp" />
        <Button
        android:id="@+id/btn_factorial"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_columnWeight="1"
        android:background="@drawable/bg_circle_gray_btn"
        android:onClick="onClick"
        android:text="!"
        android:textSize="24sp" />
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_gray_btn"
            android:onClick="onClick"
            android:text="C"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_negate"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_gray_btn"
            android:text="+/-"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_pointer"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_gray_btn"
            android:text="%"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_division"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="÷"
            android:textSize="24sp"/>


        <Button
            android:id="@+id/btn_one"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_two"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="2"
            android:textSize="24sp"/>
        <Button

            android:id="@+id/btn_three"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="3"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_multiplication"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="×"
            android:textSize="24sp" />


        <Button
            android:id="@+id/btn_four"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="4"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_five"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="5"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_six"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="6"
            android:textSize="24sp" />


        <Button
            android:id="@+id/btn_subtraction"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="-"
            android:textSize="24sp"/>


        <Button
            android:id="@+id/btn_seven"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="7"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_eight"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="8"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_nine"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="9"
            android:textSize="24sp"/>


        <Button
            android:id="@+id/btn_addition"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="+"
            android:textSize="24sp"/>



        <Button
            android:id="@+id/btn_zero"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="0"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_hard_gray_btn"
            android:text="."
            android:textSize="24sp"/>


        <Button
            android:id="@+id/btn_equals"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_circle_orange_btn"
            android:text="="
            android:textSize="24sp"/>


    </GridLayout>


</LinearLayout>